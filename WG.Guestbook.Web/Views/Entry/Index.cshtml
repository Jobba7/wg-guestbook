@model IEnumerable<Entry>

<div class="text-center">
    <h1 class="display-4">Gästebuch Einträge</h1>
    <div>
        <a asp-action="Create" class="btn btn-primary">Neuen Eintrag erstellen</a>
    </div>
    <br />
    @if (!Model.Any())
    {
        <p>Noch keine Einträge vorhanden.</p>
    }
    <div>
        @foreach (var entry in Model)
        {
            var content = entry.Content;
            if(content.Length > 30)
            {
                content = content.Substring(0, 30) + " ...";
            }
            <div class="card" style="margin-bottom: 20px">
                <div class="card-body">
                    <h5 class="card-title">@entry.Author am @entry.VisitDate.ToLongDateString()</h5>
                    <h6 class="card-text">@content</h6>
                    <a asp-action="Details" asp-route-id="@entry.Id" class="btn btn-secondary">Ansehen</a>
                </div>
            </div>
        }
    </div>
</div>