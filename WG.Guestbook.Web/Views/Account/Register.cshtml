@model RegisterViewModel

<div class="text-center">
    <h1 class="display-4">Registrierung</h1>
    <div class="col-md-12">
        <form method="post">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" placeholder="Am besten einfach nur dein Vorname" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Passwort" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Passwort wiederholen" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Konto erstellen</button>
        </form>
        <p>Du hast schon ein Konto? Dann melde dich <a asp-action="Login" asp-route-ReturnUrl="@Model.ReturnUrl">hier</a> an.</p>
    </div>
</div>
