@model LoginPanelViewModel

<ul class="navbar-nav ml-auto">
    <li class="nav-item">
        @if (Model.IsSignedIn)
        {
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Abmelden @Model.UserName</a>
        }
        else
        {
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Anmelden</a>
        }
    </li>
</ul>
